{
  "compilerOptions": {
    "target": "es2015",
    "module": "commonjs",
    "strict": true,
    "allowJs": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "jsx": "react",
    "outDir": "dist",
    "forceConsistentCasingInFileNames": true,
    "rootDir": "src",
    "sourceRoot": ".",
    "inlineSourceMap": true,
    "resolveJsonModule": true
  },
  "include": [
    "src",
  ],
  "exclude": [
    "dist",
    "node_modules"
  ],
  "ts-node": {
    "compilerOptions": {
      "module": "CommonJS"
    },
    "transpileOnly": true,
  }
}
